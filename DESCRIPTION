Package: AdaptGMCP
Type: Package
Title: Graph Based, Adaptive, Multi-Arm, Multi-Endpoint Designs
Version: 2.0.0
Authors@R: c(
    person("Ajoy", "Mukhopadhyay", role = "aut"),
    person("Anoop Singh", "Rawat", role = "aut"),
